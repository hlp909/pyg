.swiper{
  height: 720rpx;
}
swiper image{
  height: 100%;
  width: 100%;
}
.goods-info {
  padding: 20rpx;
  border-bottom: 20rpx solid #eee;
}
 .goods-price{
  font-size: 22px;
  color: var(--themeColor);
  margin-bottom: 20rpx;
}
 .goods-title{
  display: flex;
  /* margin: 20rpx; */
  justify-content: space-between;
}
 .goods-title-left{
  flex: 1;
  font-size: 14px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.goods-star{
  width: 100rpx;
  font-size: 12px;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #ddd;
  margin-left: 20rpx;
}
.express{
  font-size: 12px;
  color: #999;
  padding-top: 15rpx;
}