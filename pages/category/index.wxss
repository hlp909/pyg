.container{
  display: flex;
  justify-content:  space-between;
  position: fixed;
  top: 100rpx;
  bottom: 0;
}
.menu{
  width: 200rpx;
  background: #ededed;
  overflow-y: auto;
}
.menu-item{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 14PX;
}
.active{
  background: #fff;
  color: red;
  position: relative;
}
.active::before{
  display: block;
  content: "";
  width: 3rpx;
  height: 60rpx;
  background: red;
  position: absolute;
  left: 0;
  top: 20rpx;

}

.content{
  flex:1;
  padding: 20rpx;
  overflow-y: scroll;
}
.brand-title{
  margin: 20rpx 0;
  text-align: center;
}
.brands{
  display: flex;
  flex-wrap: wrap;
}
.brand-item{
  width: 33.33%;
  padding: 20rpx;
  box-sizing: border-box;
}
.brand-item image{
  width: 120rpx;
  height: 120rpx;
}
.brand-content{
  font-size: 12px;
  text-align: center;
}