.address-bar {
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
}

.address-info {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-tel {
  display: flex;
  align-items: center;
}

.address-detail {
  padding: 20rpx;
  padding-top: 0;
}

.address-image {
  height: 14rpx;
  width: 100%;
}


.goods-list {
  padding: 20rpx;
  margin-bottom: 80rpx;
}

.goods-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
  padding-bottom: 20rpx;
}


.goods-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-info image {
  height: 180rpx;
  width: 180rpx;
  padding-right: 20rpx;
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  
}

.info-title{
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 14px;
}

.info-bottom{
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-price{
  font-size: 16px;
  color: var(--themeColor);
}
.info-num{
  display: flex;
  align-items: center;
}

.footer{
  height: 100rpx;
  width:100%;
  display: flex;
  position: fixed;
  align-items: center;
  bottom: 0;
  left: 0;
  border-top: 1px solid #ccc;
  background: #FFF;
}
.footer-left {
  display: flex;
  align-items: center;
  padding: 0 20rpx;  
}

.footer-center{
  flex:1;
  padding-left:60rpx;
}
.center-top text{
  font-size: 16px;
  color: var(--themeColor);
}
.center-btm{
  color: #999;
  font-size: 12px;
}

.footer-right{
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background: var(--themeColor);
}